@{
    ViewData["Title"] = "Technician Setting";
    Layout = "~/Views/Shared/_TechnicianLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DernSupport</title>

    <style>
        /* General styling */
        body {
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h4 {
            margin: 20px;
            color: #007bff;
        }

        /* Container for account settings */
        #account-container {
            padding: 20px;
            display: grid;
            grid-template-columns: 2fr 1fr;
            grid-gap: 30px;
            
            
            
            max-width: 1200px;
            margin: 20px auto;
        }

        .account-section {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .account-section h5 {
                margin-bottom: 15px;
                color: #007bff;
            }

            .account-section img {
                border-radius: 50%;
                width: 100px;
                height: 100px;
            }

            .account-section label {
                display: block;
                margin-bottom: 10px;
                font-weight: bold;
            }

            .account-section input[type="text"],
            .account-section input[type="password"],
            .account-section textarea {
                width: calc(100% - 20px);
                padding: 10px;
                margin-top: 5px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .account-section button {
                margin-top: 10px;
                padding: 5px 10px;
                border: none;
                background-color: #007bff;
                color: white;
                border-radius: 4px;
                cursor: pointer;
            }

                .account-section button:hover {
                    background-color: #0056b3;
                }

        .account-info textarea {
            resize: vertical;
        }

        .account-notifications input[type="checkbox"] {
            margin-right: 10px;
        }

        .account-social-links input[type="text"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .account-social-links div {
            margin-bottom: 15px;
        }

        /* Save button */
        button[type="button"] {
            width: 100%; /* Make the button full width of the container */
            padding: 10px;
            border: none;
            background-color: #218838;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

            button[type="button"]:hover {
                background-color: #0056b3;
            }

        #account-general {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 7px 25px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            #account-general img {
                border-radius: 50%;
                width: 100px;
                height: 100px;
                display: block;
                margin-bottom: 20px;
            }

            #account-general label {
                display: block;
                margin-bottom: 10px;
                font-weight: bold;
                color: #333;
            }

            #account-general input[type="text"],
            #account-general input[type="password"],
            #account-general input[type="file"] {
                width: calc(100% - 20px);
                padding: 10px;
                margin-top: 5px;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 14px;
            }

            #account-general input[type="file"] {
                border: none;
                padding: 0;
                margin-top: 0;
                background-color: #f9f9f9;
            }

            #account-general button {
                margin-top: 10px;
                padding: 8px 15px;
                border: none;
                background-color: #007bff;
                color: white;
                border-radius: 4px;
                cursor: pointer;
                font-size: 14px;
            }

                #account-general button:hover {
                    background-color: #0056b3;
                }

            #account-general hr {
                border: 0;
                border-top: 1px solid #ddd;
                margin: 20px 0;
            }

            #account-general .info-message1 {
                font-size: 14px;
                color: #666;
            }

                #account-general .info-message1 a {
                    color: #007bff;
                    text-decoration: none;
                }

                    #account-general .info-message1 a:hover {
                        text-decoration: underline;
                    }

        .info-message {
            background-color: #fff3cd; /* Yellow background color */
            border: 1px solid #ffeeba; /* Light yellow border */
            color: #856404; /* Dark yellow text color */
            padding: 10px;
            border-radius: 4px;
            margin-top: 10px;
            position: relative;
        }

            .info-message .icon {
                font-weight: bold;
                color: #856404; /* Dark yellow color for the icon */
                margin-right: 8px;
                font-size: 18px; /* Adjust the size of the icon */
                vertical-align: middle;
            }

        /* Save button */
        button[type="button1"] {
            padding: 10px 20px;
            border: none;
            background-color: #28a745;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

            button[type="button1"]:hover {
                background-color: #218838;
            }

    </style>
</head>
<body>
    <div id="account-container">
        <div id="account-general" class="account-section">
            <h5>General</h5>
            <div>
                <img src="~/images/customer01.jpg" alt="Avatar">
                <div>
                    <label>
                        Upload new photo
                        <input type="file">
                    </label>
                    @* <button type="button1">Reset</button> *@
                    <div class="info-message1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                </div>
            </div>
            <hr>
            <div>
                <div>
                    <label>Username</label>
                    <input type="text" value="nmaxwell">
                </div>
                <br />
                <div>
                    <label>Name</label>
                    <input type="text" value="Nelle Maxwell">
                </div>
                <br />
                <div>
                    <label>E-mail</label>
                    <input type="text" value="nmaxwell@@mail.com">
                    <div class="info-message">
                        <span class="icon">!</span>
                        Your email is not confirmed. Please check your inbox.<br>
                        <a href="javascript:void(0)">Resend confirmation</a>
                    </div>
                </div>
                <br />
                <div>
                    <label>Company</label>
                    <input type="text" value="Company Ltd.">
                    <br/>
                    <button type="button">Save Changes</button>
                </div>
            </div>
        </div>

        <div id="account-change-password" class="account-section">
            <h5>Change Password</h5>
            <div>
                <label>Current password</label>
                <input type="password">
            </div>
            <br />
            <div>
                <label>New password</label>
                <input type="password">
            </div>
            <br />
            <div>
                <label>Repeat new password</label>
                <input type="password">
            </div>
        </div>
        <div id="account-info" class="account-section">
            <h5>Info</h5>
            <div>
                <label>Bio</label>
                <textarea rows="5">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris nunc arcu, dignissim sit amet sollicitudin iaculis, vehicula id urna. Sed luctus urna nunc. Donec fermentum, magna sit amet rutrum pretium, turpis dolor molestie diam, ut lacinia diam risus eleifend sapien. Curabitur ac nibh nulla. Maecenas nec augue placerat, ultricies libero sed, scelerisque erat.</textarea>
            </div>
        </div>
        <div id="account-social-links" class="account-section">
            <h5>Social Links</h5>
            <div>
                <label>Facebook</label>
                <input type="text" placeholder="https://facebook.com">
            </div>
            <br />
            <div>
                <label>Twitter</label>
                <input type="text" placeholder="https://twitter.com">
            </div>
            <br />
            <div>
                <label>LinkedIn</label>
                <input type="text" placeholder="https://linkedin.com">
            </div>
            <br />
          
        </div>
    </div>
</body>
</html>
