@{
    ViewData["Title"] = "Help";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .faq-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 7px 25px rgba(0, 0, 0, 0.08);
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 30px;
        }

        .faq-item {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            .faq-item:last-child {
                margin-bottom: 0;
            }

        input[type="checkbox"] {
            display: none;
        }

        /* Updated styling for FAQ labels */
        .faq-label {
            display: block;
            font-size: 18px;
            cursor: pointer;
            padding: 10px;
            background-color: #fff; /* White background */
            color: black; /* Black text color */
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .faq-label:hover {
                background-color: #f0f0f0; /* Light grey background on hover */
            }

        .faq-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            padding: 0 10px;
            color: #737373; /* Text color for answers */
        }

        input[type="checkbox"]:checked ~ .faq-content {
            max-height: 200px; /* Adjust as needed */
        }

        .faq-content p {
            margin: 10px 0;
        }
    </style>
</head>
<body>

    <div class="faq-container">
        <h2>Frequently Asked Questions</h2>

        <!-- FAQ Item 1 -->
        <div class="faq-item">
            <input type="checkbox" id="faq1">
            <label class="faq-label" for="faq1">What is DernSupport?</label>
            <div class="faq-content">
                <p>DernSupport is a company that provides technical support and IT services to small and medium-sized businesses.</p>
            </div>
        </div>

        <!-- FAQ Item 2 -->
        <div class="faq-item">
            <input type="checkbox" id="faq2">
            <label class="faq-label" for="faq2">How can I contact customer support?</label>
            <div class="faq-content">
                <p>You can contact customer support by emailing support@dernsupport.com or calling our hotline at (123) 456-7890.</p>
            </div>
        </div>

        <!-- FAQ Item 3 -->
        <div class="faq-item">
            <input type="checkbox" id="faq3">
            <label class="faq-label" for="faq3">What services do you offer?</label>
            <div class="faq-content">
                <p>We offer a range of IT services including cloud solutions, network management, and cybersecurity services.</p>
            </div>
        </div>

    </div>

</body>
</html>
